@page
@model TeaserPageModel
@{
    ViewData["Title"] = Model.Data.Title;
}
@section head
{
    @WebApp.MetaTags(Model.Data)
}

@Html.DisplayFor(m => m.Data.Hero)


<div class="container-fluid full-screen">
    <div class="row slider-fade">
        <div class="owl-carousel owl-theme width-100">
            <partial name="Partial/TeasersTMH" for="Data.Teasers" />
        </div>
    </div>
</div>

@if (Model.Data.LatestPost != null)
{
    <div class="container bg-warning pt-3 pb-3">
        <div class="row">
            <div class="col text-center">
                Latest news:
                <strong>@Model.Data.LatestPost.Published.Value.ToString("yyyy-MM-dd")</strong>
                -
                <a href="@WebApp.Url(Model.Data.LatestPost)">@Model.Data.LatestPost.Title</a>
            </div>
        </div>
    </div>
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 col-xs-12">
            @Html.DisplayFor(m => m.Data.Blocks)
        </div>
    </div>
</div>

<partial name="Partial/Quotes" for="Data.Quotes" />
